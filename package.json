{
  "name": "node-starter",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "browserify --node src/index.js -o build/bundle.js",
    "start": "npm run build && node build/bundle.js",
    "watch": "mkdir -p build && watchify --node src/index.js -o build/bundle.js",
    "dev": "npm run watch & devtool --watch --no-browser-globals build/bundle.js"
  },
  "author": "Chang Wang <cheapsteak@gmail.com> (https://github.com/cheapsteak)",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^5.8.38",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "devtool": "^1.9.1",
    "nodemon": "^1.9.1",
    "watchify": "^3.7.0"
  }
}
